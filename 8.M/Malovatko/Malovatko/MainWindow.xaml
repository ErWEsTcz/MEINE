<Window x:Class="Malovatko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Malovatko"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>

        </Grid.RowDefinitions>
        <Menu Background="#FFC8C8C8">
            <MenuItem x:Name="MenuSoubor" Header="Soubor" Height="20">
                <MenuItem x:Name="OpenMenu" Header="Otevřít" Click="OpenMenu_Click"/>
                <MenuItem x:Name="SaveMenu" Header="Uložit" Click="SaveMenu_Click"/>
            </MenuItem>
            <MenuItem Header="Upravit" Height="20"/>
        </Menu>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Image Source="/stetec_ikona.png" Width="30" Height="30" Margin="10,0,0,0"/>
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Tloušťka štětce" Margin="10,0,0,0"/>
            <Slider x:Name="sldTloustka" VerticalAlignment="Center" Width="175" Maximum="20" ValueChanged="SldTloustka_ValueChanged" Minimum="1" Value="5"/>
            <Label VerticalAlignment="Center" Content="Barva štětce" Margin="10,0,0,0"/>
            <Button x:Name="btnColorPick" VerticalAlignment="Center" Width="25" Height="25" Click="btnColorPick_Click" Background="Black"/>
        </StackPanel>

        <Canvas x:Name="DrawingCanvas" Grid.Row="2" MouseMove="DrawingCanvas_MouseMove" MouseDown="DrawingCanvas_MouseDown" MouseUp="DrawingCanvas_MouseUp" Background="White"/>

        <StackPanel Grid.Row="3" HorizontalAlignment="Right" Orientation="Horizontal">
            <Label VerticalAlignment="Center">0%</Label>
            <Slider Width="100" VerticalAlignment="Center" Maximum="100"/>
            <Label VerticalAlignment="Center">100%</Label>
        </StackPanel>


    </Grid>
</Window>
