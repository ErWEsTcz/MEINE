<Window x:Class="MVVMProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Zadejte úkol:" VerticalAlignment="Center"/>
            <TextBox x:Name="ZadaniUkolu" Margin="5" Width="300" Height="20" Text="{Binding TaskName}"/>
            <Button Content="Add" Margin="5" Width="75" Command="{Binding AddCommand}"/>
            <Button Content="Delete" Margin="5" Width="75" Command="{Binding DeleteCommand}"/>
        </StackPanel>



            <DataGrid Grid.Row="1"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                CanUserAddRows="False" CanUserDeleteRows="False"
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                <DataGridTextColumn Header="Úkoly" Binding="{Binding Name}" Width="4*" />
            </DataGrid.Columns>
            </DataGrid>

    </Grid>
</Window>
